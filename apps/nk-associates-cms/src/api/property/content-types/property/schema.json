{
  "kind": "collectionType",
  "collectionName": "properties",
  "info": {
    "singularName": "property",
    "pluralName": "properties",
    "displayName": "Property",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 40,
      "minLength": 6
    },
    "address": {
      "type": "string",
      "required": true,
      "maxLength": 40,
      "minLength": 6
    },
    "city": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Plot",
        "Flat",
        "House"
      ],
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Residential",
        "Commercial"
      ],
      "default": "Residential",
      "required": true
    },
    "bedrooms": {
      "type": "integer"
    },
    "baths": {
      "type": "integer"
    },
    "purpose": {
      "type": "enumeration",
      "enum": [
        "Sale",
        "Rent"
      ],
      "required": true
    },
    "price": {
      "type": "biginteger",
      "required": true,
      "min": "1"
    },
    "area": {
      "type": "decimal",
      "required": true,
      "min": 1
    },
    "area_type": {
      "type": "enumeration",
      "enum": [
        "Sq.Yd",
        "Sq.Ft",
        "Sq.M",
        "Marla",
        "Kanal"
      ],
      "required": true
    },
    "latitude": {
      "type": "float",
      "required": true,
      "min": 1
    },
    "longitude": {
      "type": "float",
      "required": true,
      "min": 1
    },
    "image_thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "property_images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "property_pdf": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    }
  }
}
